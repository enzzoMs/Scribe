<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewMain="clr-namespace:Scribe.UI.Views.Main"
    xmlns:viewSplash="clr-namespace:Scribe.UI.Views.Splash"
    xmlns:viewEditor="clr-namespace:Scribe.UI.Views.Editor"
    mc:Ignorable="d"
    x:Class="Scribe.UI.Views.Main.MainWindow"
    d:DesignWidth="1000"
    d:DesignHeight="800"
    d:DataContext="{d:DesignInstance viewMain:MainViewModel}"
    Title="Scribe"
    Icon="../../Resources/Images/scribe_logo.png"
    WindowState="Maximized">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewSplash:SplashViewModel}">
            <viewSplash:SplashControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewEditor:EditorViewModel}">
            <viewEditor:EditorControl/>
        </DataTemplate>
    </Window.Resources>
    
    <ContentControl Content="{Binding ContentViewModel}"/>
</Window>
