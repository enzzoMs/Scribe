<UserControl 
    x:Class="Scribe.UI.Views.Sections.Navigation.Collapsed.CollapsedFoldersSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:navSection="clr-namespace:Scribe.UI.Views.Sections.Navigation"
    mc:Ignorable="d"
    d:DesignHeight="800" 
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance navSection:NavigationViewModel}"
    Name="Root">
    
    <UserControl.Resources>
        <ControlTemplate x:Key="SelectedItemTemplate">
            <Border 
                DataContext="{Binding DataContext, ElementName=Root}"
                Padding="{DynamicResource Dimen.FolderItem.Padding}" 
                CornerRadius="{DynamicResource Dimen.FolderItem.Radius}" 
                Background="#232323">
                <TextBlock
                    Text="{Binding SelectedFolder.Name[0], FallbackValue=#}"
                    ToolTip="{Binding SelectedFolder.Name, FallbackValue=#}"
                    Foreground="White"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="UnselectedItemTemplate">
            <Border 
                ToolTip="{Binding Name}"
                Padding="{DynamicResource Dimen.FolderItem.Padding}" 
                CornerRadius="{DynamicResource Dimen.FolderItem.Radius}"
                Background="Transparent">
                <TextBlock
                    Text="{Binding Name[0]}"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </UserControl.Resources>
    
    <ListView
        ItemsSource="{Binding CurrentFolders}"
        SelectedItem="{Binding SelectedFolder}"
        Background="Transparent"
        BorderThickness="0"
        HorizontalContentAlignment="Stretch"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="Template" Value="{StaticResource UnselectedItemTemplate}"/>
                <Style.Triggers>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsSelected" Value="true"/>
                            <Condition Property="Selector.IsSelected" Value="true"/>
                        </MultiTrigger.Conditions>                            
                        <Setter Property="Template" Value="{StaticResource SelectedItemTemplate}" />                            
                    </MultiTrigger>
                </Style.Triggers>
            </Style>
        </ListView.ItemContainerStyle>
    </ListView>
</UserControl>
