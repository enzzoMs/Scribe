<UserControl 
     x:Class="Scribe.UI.Views.Sections.Navigation.Collapsed.CollapsedNavSection"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:navSection="clr-namespace:Scribe.UI.Views.Sections.Navigation"
     xmlns:components="clr-namespace:Scribe.UI.Views.Components"
     xmlns:sys="clr-namespace:System;assembly=mscorlib"
     xmlns:collapsed="clr-namespace:Scribe.UI.Views.Sections.Navigation.Collapsed"
     mc:Ignorable="d"
     d:DesignHeight="800"
     d:DesignWidth="300"
     d:DataContext="{d:DesignInstance navSection:NavigationViewModel}"
     Background="{DynamicResource Brush.Surface}">
    
    <UserControl.Resources>
        <Style x:Key="ConfigItemStyle" TargetType="components:IconButton">
            <Setter Property="Width" Value="{DynamicResource Dimen.Config.Item.Icon.Size}"/>
            <Setter Property="Height" Value="{DynamicResource Dimen.Config.Item.Icon.Size}"/>
            <Setter Property="IconBrush" Value="{DynamicResource Brush.Text.Primary}"/>
            <Setter Property="Margin" Value="{DynamicResource Dimen.Nav.Collapsed.ConfigIcon.Margin}"/>
        </Style>
    </UserControl.Resources>
    
    <Grid
        Width="{DynamicResource Dimen.Nav.Collapsed.Size}"
        Margin="{DynamicResource Dimen.Nav.Collapsed.InnerMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <components:IconButton
            Width="{DynamicResource Dimen.Nav.OpenAndCloseIcon.Size}"
            Height="{DynamicResource Dimen.Nav.OpenAndCloseIcon.Size}"
            IconGeometry="{StaticResource Drawing.DoubleArrow.Right}"
            IconBrush="{DynamicResource Brush.Text.Primary}"
            ToolTip="{DynamicResource String.Nav.Open}"
            Command="{Binding CollapseNavigationCommand}"
            HorizontalAlignment="Center">
            <components:IconButton.CommandParameter>
                <sys:Boolean>False</sys:Boolean>
            </components:IconButton.CommandParameter>
        </components:IconButton>
        <Rectangle
            Grid.Row="1"
            Style="{StaticResource Style.Divider.Horizontal}"
            Margin="{DynamicResource Dimen.Nav.Collapsed.Divider.Margin}"/>
        <components:IconButton
            Grid.Row="2"
            Width="{DynamicResource Dimen.Nav.Expanded.NewFolderIcon.Size}"
            Height="{DynamicResource Dimen.Nav.Expanded.NewFolderIcon.Size}"
            IconPadding="{DynamicResource Dimen.Nav.Expanded.NewFolderIcon.Padding}"
            IconBrush="{DynamicResource Brush.Text.Primary}"
            IconGeometry="{StaticResource Drawing.Add}"
            Command="{Binding CreateFolderCommand}"
            ToolTip="{DynamicResource String.Folders.Tooltip.Create}"
            Margin="{DynamicResource Dimen.Nav.Collapsed.NewFolderIcon.Margin}"
            HorizontalAlignment="Center"/>
        <collapsed:CollapsedFoldersSection
            Grid.Row="3"/>
        <Rectangle
            Grid.Row="4"
            Style="{StaticResource Style.Divider.Horizontal}"
            Margin="{DynamicResource Dimen.Nav.Collapsed.Divider.Margin}"/>
        <components:IconButton
            Grid.Row="5"
            IconGeometry="{StaticResource Drawing.Contrast}"
            ToolTip="{DynamicResource String.Config.Theme}"
            Command="{Binding CollapseNavigationCommand}"
            Style="{StaticResource ConfigItemStyle}">
            <components:IconButton.CommandParameter>
                <sys:Boolean>False</sys:Boolean>
            </components:IconButton.CommandParameter>
        </components:IconButton>
        <components:IconButton
            Grid.Row="6"
            IconGeometry="{StaticResource Drawing.Globe}"
            ToolTip="{DynamicResource String.Config.Language}"
            Command="{Binding CollapseNavigationCommand}"
            Style="{StaticResource ConfigItemStyle}">
            <components:IconButton.CommandParameter>
                <sys:Boolean>False</sys:Boolean>
            </components:IconButton.CommandParameter>
        </components:IconButton>
        <components:IconButton
            Grid.Row="7"
            IconGeometry="{StaticResource Drawing.Ruler}"
            ToolTip="{DynamicResource String.Config.Scale}"
            Command="{Binding CollapseNavigationCommand}"
            Style="{StaticResource ConfigItemStyle}">
            <components:IconButton.CommandParameter>
                <sys:Boolean>False</sys:Boolean>
            </components:IconButton.CommandParameter>
        </components:IconButton>
    </Grid>
</UserControl>
