<Application
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:sys="clr-namespace:System;assembly=mscorelib"
     x:Class="Scribe.UI.App">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Fonts/Fonts.xaml"/>
                <ResourceDictionary Source="Resources/Drawings/Drawings.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Template.ScrollBar.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Template.ClosableTabControl.xaml"/>

                <!-- These resources are only to assist at design time and will be removed before the app runs -->
                <ResourceDictionary Source="Resources/Brushes/Brushes.Light.xaml"/>
                <ResourceDictionary Source="Resources/Dimens/Dimens.xaml"/>
                <ResourceDictionary Source="Resources/Strings/Strings.EnUs.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <sys:Boolean x:Key="True">True</sys:Boolean>
            <sys:Boolean x:Key="False">False</sys:Boolean>
        </ResourceDictionary>
    </Application.Resources>
</Application>
