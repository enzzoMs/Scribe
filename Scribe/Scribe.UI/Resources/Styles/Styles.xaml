<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}"/>
            <Setter Property="FontFamily" Value="{StaticResource Text.Medium}"/>
            <Setter Property="FontSize" Value="{DynamicResource Dimen.TextSize.Normal1}"/>
        </Style.Setters>
    </Style>
    
    <Style TargetType="TextBox">
        <Style.Setters>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}"/>
            <Setter Property="FontFamily" Value="{StaticResource Text.Medium}"/>
            <Setter Property="FontSize" Value="{DynamicResource Dimen.TextSize.Normal1}"/>
        </Style.Setters>
    </Style>
    
    <Style x:Key="Brush.Divider.Horizontal">
        <Style.Setters>
            <Setter Property="Rectangle.Height" Value="{DynamicResource Dimen.Divider.Size}"/>
            <Setter Property="Rectangle.Fill" Value="{DynamicResource Brush.Divider}"/>
        </Style.Setters>
    </Style>
    
    <Style x:Key="Brush.Divider.Vertical">
        <Style.Setters>
            <Setter Property="Rectangle.Width" Value="{DynamicResource Dimen.Divider.Size}"/>
            <Setter Property="Rectangle.Fill" Value="{DynamicResource Brush.Divider}"/>
        </Style.Setters>
    </Style>
</ResourceDictionary>